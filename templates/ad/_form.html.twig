{{ form_start(form) }}
    <div class="form-group offset-2 col-8">
        {{ form_row(form.title) }}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.name) }}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.description) }}
    </div>
    <div class="form-group offset-2 col-8">
        {% if ad.image %}
            <img id="image-pokemon" class="img-fluid" src="{{ asset('images/upload/' ~ ad.image) }}" alt="">
        {% else %}
            <img id="image-pokemon" class="img-fluid" src="{{ asset('images/default.jpg') }}" alt="">
        {% endif %}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.imageFile) }}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.price) }}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.exchange) }}
    </div>
    <div class="form-group offset-2 col-8">
        {{ form_row(form.type) }}
    </div>
    <button class="btn btn-primary">{{ button_label|default('Cr√©er') }} <i class="fas fa-plus"></i></button>
{{ form_end(form) }}