<form name="connection" method="post">
    <div class="form-group offset-2 col-8">
        <input type="text" id="connection_username" name="_username"
               required="required" placeholder="identifiant" class="form-control">
    </div>
    <div class="form-group offset-2 col-8">
        <input type="password" id="connection_password" name="_password"
               required="required" placeholder="Mot de passe" class="form-control">
    </div>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
    <button class="btn btn-primary">{{ button_label|default('Connexion') }}</button>
</form>