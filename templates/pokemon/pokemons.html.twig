{% if pokemons is not empty %}
    {% for pokemon in pokemons %}
    <div class="col-xl-3 col-md-6 offset-md-0 offset-1 col-lg-4">
        {% include 'pokemon/pokemon.html.twig' %}
    </div>
    {% endfor %}
    {% if nbPokemons > 20 %}
        <div class="col-12">
            <div class="row justify-content-center mb-5">
                <nav aria-label="page navigation">
                    <ul class="pagination">
                        {% if page == 1 %}
                            <li class="page-item disabled">
                                <a class="page-link" href="#">
                                    &laquo;
                                </a>
                            </li>
                        {% else %}
                            <li class="page-item">
                                <a class="page-link" href="{{ path('pokemon_index',
                                    {'page': page - 1, 'searchBy': searchBy, 'toSearch': toSearch}) }}">
                                    &laquo;
                                </a>
                            </li>
                        {% endif %}
                        {% for i in 1..25 if i <= lastPage %}
                        <li class="page-item
                            {% if page == i %}
                                active
                            {% endif %}
                        ">
                            <a class="page-link" href="{{ path('pokemon_index',
                                                {'page': i, 'searchBy': searchBy, 'toSearch': toSearch}) }}">
                                {{ i }}
                            </a>
                        </li>
                        {% endfor %}
                        {% if page == lastPage %}
                        <li class="page-item disabled">
                            <a class="page-link" href="#">&raquo;</a>
                        </li>
                        {% else %}
                        <li class="page-item">
                            <a class="page-link" href="{{ path('pokemon_index',
                                {'page': page + 1, 'searchBy': searchBy, 'toSearch': toSearch}) }}">
                                &raquo;
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                </nav>
            </div>
        </div>
    {% endif %}
{% else %}
    <p class="text-center col-12">Aucun pokémon n'a été trouvé</p>
{% endif %}
