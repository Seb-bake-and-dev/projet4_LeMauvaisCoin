{% extends 'base.html.twig' %}

{% block title %}Ad{% endblock %}

{% block body %}
    <div class="row">
        <div class="shadow my-5 py-5 justify-content-center col-12">
            <h1 class="text-center">Pokémon {{ pokemon.name }}</h1>
            <div class="row">
                <div class="col-4 offset-2">
                    <img class="pokemon" src="{{ pokemon.image }}" alt="">
                </div>
                <div class="col-4">
                    <h2>Stats</h2>
                    <p>HP : {{ pokemon.pv }}</p>
                    <p>Attaque : {{ pokemon.attack}}</p>
                    <p>Défense : {{ pokemon.defense }}</p>
                    <p>Vitesse: {{ pokemon.speed }}</p>
                    <p>Type 1 : {{ pokemon.type1 }}</p>
                    <p>Type 2 : {{ pokemon.type2 }}</p>
                </div>
            </div>
            <div class="col">
                <a href="{{ path('pokemon_index') }}" class="btn btn-dark"><i class="fas fa-chevron-left"></i> Retour</a>
                {% if app.user == pokemon.name %}
                    <div class="float-right">
                        <a href="{{ path('pokemon_edit', {'id': pokemon.id}) }}" class="btn btn-primary d-inline-block mr-5">
                            Modifier <i class="fas fa-pen-fancy"></i>
                        </a>
                        {{ include('pokemon/_delete_form.html.twig') }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}